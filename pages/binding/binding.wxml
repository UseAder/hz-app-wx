<view class="page">
  <view class="page__bd">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <image class="nameImage" src="../../images/account.png"></image>
      <input class="weui-input" placeholder="请输入需要绑定的查单账号" value='{{account}}' bindinput='getAccountValue' type="number"/>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <image class="keyImage" src="../../images/password.png"></image>
      <input class="weui-input  weui-input-te" placeholder="请输入密码" bindinput='getPasswordValue' value='{{password}}' type="number" />
    </view>
    <view class="J-btn-area">
      <button class="weui-btn " bindtap="binding">绑定</button>
    </view>
       
  </view>
   <view class="weui-footer">
    <view class="weui-footer__text">技术支持：杭州领华科技有限公司</view>
  </view>
</view>